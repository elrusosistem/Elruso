{
  "name": "elruso",
  "private": true,
  "description": "Stock management system with Tiendanube integration",
  "scripts": {
    "dev:api": "pnpm --filter @elruso/api dev",
    "dev:worker": "pnpm --filter @elruso/worker dev",
    "dev:web": "pnpm --filter @elruso/web dev",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter @elruso/api build",
    "build:worker": "pnpm --filter @elruso/worker build",
    "build:web": "pnpm --filter @elruso/web build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
